    <Grid Background="{StaticResource BrushOne}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="3"
            Source="/Assets/cloud-icon.png"/>

        <Button Grid.Row="2" 
                Grid.Column="1" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_left.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="2" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_play.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="3" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_stop.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="4" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_right.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
