<Page
    x:Class="AudioPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource BrushOne}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="00:00"
            FontSize="15"
            Foreground="Black"/>
        
        <ProgressBar
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Foreground="Bisque"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1.5"
            Value="70"
            Height="33" >
           
        </ProgressBar>
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="3"
            Source="/Assets/cloud-icon.png"/>

        <Button Grid.Row="2" 
                Grid.Column="1" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_left.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="2" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_play.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="3" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_stop.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Grid.Row="2" 
                Grid.Column="4" 
                HorizontalAlignment="Center" 
                BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="Assets/button_right.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        
    </Grid>
</Page>
